<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.asifkhan.sqlitesimpletodoapp.activities.AddNewTodo">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark">

            <include android:id="@+id/toolbar" layout="@layout/custom_toolbar_layout"/>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/new_todo_container_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/todo_title"
                    android:drawableLeft="@drawable/ic_add_new_todo_title"
                    android:drawablePadding="@dimen/drawable_input_padding"
                    android:padding="@dimen/input_padding"
                    android:hint="@string/todo_title_hint"
                    android:theme="@style/InputStyleTheme"
                    android:foregroundTint="@color/input_foreground_color"
                    android:textColorHint="@color/input_text_hint_color"
                    app:backgroundTint="@color/input_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/todo_content"
                    android:drawableLeft="@drawable/ic_add_new_todo_content"
                    android:drawablePadding="@dimen/drawable_input_padding"
                    android:padding="@dimen/input_padding"
                    android:hint="@string/todo_content_hint"
                    android:theme="@style/InputStyleTheme"
                    android:foregroundTint="@color/input_foreground_color"
                    android:textColorHint="@color/input_text_hint_color"
                    app:backgroundTint="@color/input_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/todo_tag"
                    android:drawableLeft="@drawable/ic_add_new_todo_tag_icon"
                    android:drawablePadding="@dimen/drawable_input_padding"
                    android:padding="@dimen/input_padding"
                    android:hint="@string/todo_tag_hint"
                    android:theme="@style/InputStyleTheme"
                    android:foregroundTint="@color/input_foreground_color"
                    android:textColorHint="@color/input_text_hint_color"
                    app:backgroundTint="@color/input_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/todo_date"
                    android:drawableLeft="@drawable/ic_add_new_todo_date"
                    android:drawablePadding="@dimen/drawable_input_padding"
                    android:padding="@dimen/input_padding"
                    android:hint="@string/todo_date_hint"
                    android:theme="@style/InputStyleTheme"
                    android:foregroundTint="@color/input_foreground_color"
                    android:textColorHint="@color/input_text_hint_color"
                    app:backgroundTint="@color/input_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_weight="@dimen/layout_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/todo_time_from"
                        android:drawableLeft="@drawable/ic_add_new_todo_date"
                        android:drawablePadding="@dimen/drawable_input_padding"
                        android:padding="@dimen/input_padding"
                        android:hint="@string/todo_time_from_hint"
                        android:theme="@style/InputStyleTheme"
                        android:foregroundTint="@color/input_foreground_color"
                        android:textColorHint="@color/input_text_hint_color"
                        app:backgroundTint="@color/input_background_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_weight="@dimen/layout_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/todo_time_to"
                        android:drawableLeft="@drawable/ic_add_new_todo_date"
                        android:drawablePadding="@dimen/drawable_input_padding"
                        android:padding="@dimen/input_padding"
                        android:hint="@string/todo_time_to_hint"
                        android:theme="@style/InputStyleTheme"
                        android:foregroundTint="@color/input_foreground_color"
                        android:textColorHint="@color/input_text_hint_color"
                        app:backgroundTint="@color/input_background_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/normal"
                        android:text="@string/radio_normal_text"
                        android:buttonTint="@color/radio_button_color"
                        android:textSize="@dimen/radio_button_text_size"
                        android:layout_margin="@dimen/radio_button_layout_margin"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/medium"
                        android:text="@string/radio_medium_text"
                        android:textSize="@dimen/radio_button_text_size"
                        android:layout_margin="@dimen/radio_button_layout_margin"
                        android:buttonTint="@color/radio_button_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/high"
                        android:text="@string/radio_high_text"
                        android:textSize="@dimen/radio_button_text_size"
                        android:layout_margin="@dimen/radio_button_layout_margin"
                        android:buttonTint="@color/radio_button_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RadioGroup>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/todo_text_color"
                    android:drawableLeft="@drawable/ic_todo_text_color_picker"
                    android:drawablePadding="@dimen/drawable_input_padding"
                    android:padding="@dimen/input_padding"
                    android:hint="@string/todo_text_color_hint"
                    android:theme="@style/InputStyleTheme"
                    android:foregroundTint="@color/input_foreground_color"
                    android:textColorHint="@color/input_text_hint_color"
                    app:backgroundTint="@color/input_background_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
