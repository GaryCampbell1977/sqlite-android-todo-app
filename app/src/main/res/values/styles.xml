<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="InputStyleTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@color/input_text_hint_color</item>
        <item name="colorControlActivated">@color/input_text_hint_color</item>
        <item name="colorControlHighlight">@color/input_text_hint_color</item>
        <item name="android:textColorHint">@color/input_text_hint_color</item>
    </style>

</resources>
